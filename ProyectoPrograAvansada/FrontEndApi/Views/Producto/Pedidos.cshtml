@model IEnumerable<FrontEndApi.Models.ProductoViewModel>

@{ ViewData["Title"] = "Pedidos";
                decimal precio = 0; }

<h1>Pedidos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdPrecio)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProdName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProdPrecio) ₡
        @{ precio += item.ProdPrecio; }
    </td>
</tr>}
        <tr>
            <td><b>Precio total:</b></td>
            <td>@precio ₡</td>
        </tr>
    </tbody>
</table>
